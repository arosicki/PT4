@page
@model PTech4.Pages.books.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Books</h1>

<div>
    <p>
        <a asp-page="Create">Create New</a>
    </p>
    <form>
        <div class="form-group">
            <label asp-for="Filter" class="control-label"></label>
                <select name="Filter" class="form-control" asp-items="@Model.FilterSL">
            </select>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Search" name="SearchString" value="@Request.Query["SearchString"]">
		</div>
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
    <form>
		<button type="submit" class="btn btn-secondary">Clear</button>
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].ISBN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].Publisher)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Book) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ISBN)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author.Fullname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Publisher.Name)
                </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
